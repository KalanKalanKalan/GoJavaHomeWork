            void grow(){}
            void smell(){}
        }
        class rose extends Flower{}
        class chamomile extends Flower{}
        class aster extends Flower{}
        class tulip extends Flower{}
        class rosebush extends Flower{}

        class bouquet
        {
            rose f1 = new rose();
            chamomile f2 = new chamomile();
            aster f3 = new aster();
            tulip f4 = new tulip();
            rosebush f5 = new rosebush();
            int size ;
            void keep_flowers(){}

        }
    }
